{
    "name": "hiraeth/diactoros",
    "description": "PSR-7 via Diactoros for the Hiraeth Nano Framework",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "MIT",
    "authors": [
        {
            "name":  "Matthew J. Sahagian",
            "email": "matthew.sahagian@gmail.com",
            "role":  "Lead Architect / Developer"
        }
    ],
    "provide": {
        "hiraeth/http-imp": "3.0.0"
    },
    "autoload": {
        "classmap": ["src/"]
    },
    "require": {
        "hiraeth/app": "^3.0",
        "hiraeth/http": "^3.0",
        "laminas/laminas-diactoros": "^3.0",
	"php-http/message": "^1.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.0",
	"phpunit/phpunit": "^10.0"
    },
    "type": "opus-package",
    "extra": {
        "opus": {
            "hiraeth/app": {
                "config": ""
            }
        }
    },
    "config": {
        "allow-plugins": {
            "imarc/opus": true
        }
    }
}
